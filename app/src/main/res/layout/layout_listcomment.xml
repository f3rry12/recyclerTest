<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_comment"
    android:background="@android:color/white"
    android:layout_marginBottom="6dp"
    android:padding="12dp"
    >
    
    <ImageView
        android:id="@+id/fotoprofil"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/profile"
        />
    <RelativeLayout
        android:id="@+id/bgcomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_comment"
        android:layout_toRightOf="@id/fotoprofil"
        android:layout_marginLeft="6dp"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id labore ex et quam laborum"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"

            android:textSize="14dp"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:text="Eliseo@gardner.biz"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/comment_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:textColor="@android:color/black"
            android:text="laudantium enim quasi est quidem magnam voluptate ipsam eos\ntempora quo necessitatibus\ndolor quam autem quasi\nreiciendis et nam sapiente accusantium"/>
    </RelativeLayout>

    

</RelativeLayout>